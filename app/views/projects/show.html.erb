<%= stylesheet_link_tag 'project'%>
<div class="container">
    
        <div class="col-lg-8 border p-3 main-section bg-white">
            <div class="row m-0">
                <div class="col-lg-4 left-side-product-box pb-3">
                    <img src="http://nicesnippets.com/demo/pd-image1.jpg" class="border p-3">
                    <span class="sub-img">
                        <img src="http://nicesnippets.com/demo/pd-image2.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image3.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                    </span>
                </div>
                <div class="col-lg-8">
                    <div class="right-side-pro-detail border p-3 m-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class="m-0 p-0 text-black"><%= @project.name.capitalize %></p>
                            </div>
                            <div class="col-lg-12">
                                <span class='row'>
                                    <div class='col'>
                                        <p class="m-0 p-0 text-black">Our goal: $<%= @project.money_goal %></p>
                                    </div>
                                    <div class='col'>
                                        <p class="m-0 p-0 price-pro">Left: $<%= @project.money_goal - @sum %></p>
                                        
                                    </div>
                                </span>
                                <span class='row'>
                                    <div class='col'>
                                        <p class="m-0 p-0">Start: <%= @project.created_at.strftime('%Y-%m-%d') %></p>
                                    </div>
                                    <div class='col'>
                                        <p class="m-0 p-0">End: <%= @project.end_date.strftime('%Y-%m-%d') %></p>
                                        
                                    </div>
                                </span>
                                <hr class="p-0 m-0"> 
                            </div>
                            <div class="col-lg-12 pt-2">
                                <h5>Project Detail</h5>
                                <span><%= @project.description.capitalize %></span>
                                <hr class="m-0 pt-1 mt-2">
                            </div>
                            <%= form_for([@project, Donation.new]) do |f| %>
                                <div class="col-lg-12 mt-3">
                                    <h6>Donation:</h6>
                                    <%= f.number_field :amount, class:"form-control text-center w-100", placeholder: 'Amount'%>
                                </div>
                                <div class="col-lg-12 mt-3">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <%= f.submit "Donate", class: 'btn btn-success' %>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>