  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Charity projects</h1>
        <p class="lead text-muted">Description here</p>
      </div>
    </div>
  </section>
  <% Project.all.each do |project| %>
    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"></svg>

              <div class="card-body">
                <h6 class="card-title"><%=project.name.capitalize%></h6>
                <p class="card-text"><%=project.description.capitalize%></p>
                <div class="d-flex justify-content-between align-items-center">
                    <%= link_to "View", project_path(project), class: 'btn btn-sm btn-outline-secondary' %>
                  <small class="text-muted"><%=project.created_at.strftime("%Y-%m-%d")%></small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>