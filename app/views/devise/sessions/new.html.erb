<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto mx-auto">
    <h1 class="text-center"><%=t('.log_in')%></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('.password'), class: 'form-control', required: 'required' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t('.remember_me') %>
          </label>
        </div>
      <% end -%>

      <div class="mb-3 d-grid">
        <%= f.submit t('.to_log_in'), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
